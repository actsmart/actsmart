{
    "name": "actsmart/actsmart",
    "type": "library",
    "description": "Intelligent Agent Construction Toolkit",
    "keywords": [
        "actsmart",
        "actsmart"
    ],
    "homepage": "https://github.com/actsmart/actsmart",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald Ashri",
            "email": "ronald.ashri@gmail.com",
            "homepage": "https://actsmart.io",
            "role": "Developer"
        }
    ],
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "require": {
        "php": "~7.0",
        "aws/aws-sdk-php": "2.*",
        "clue/graph": "0.9.0",
        "euautomation/graphql-client": "0.2",
        "google/cloud-language": "^0.15.5",
        "guzzlehttp/guzzle": "~6.3",
        "psr/log": "1.*",
        "symfony/cache": "~4.0",
        "symfony/event-dispatcher": "~4.0",
        "symfony/http-foundation": "~4.0",
        "php-ds/php-ds": "~1.2."
    },
    "require-dev": {
        "phpunit/phpunit" : "~7.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "actsmart\\actsmart\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "actsmart\\actsmart\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
