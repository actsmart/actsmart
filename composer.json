{
    "name": "actsmart/actsmart",
    "type": "library",
    "description": "Intelligent Agent Construction Toolkit",
    "keywords": [
        "actsmart",
        "actsmart"
    ],
    "homepage": "https://github.com/actsmart/actsmart",
    "license": "MIT",
    "authors": [
        {
            "name": "Ronald Ashri",
            "email": "ronald.ashri@gmail.com",
            "homepage": "https://actsmart.io",
            "role": "Developer"
        }
    ],
    "minimum-stability" : "dev",
    "prefer-stable" : true,
    "require": {
        "php" : "~5.6|~7.0",
        "symfony/http-foundation" : "~3.3",
        "symfony/event-dispatcher" : "~3.3",
        "guzzlehttp/guzzle": "~6.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0||~6.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "actsmart\\actsmart\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "actsmart\\actsmart\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
